<AdicionarProdutoDaVenda>:
    FloatLayout:
        canvas:
            Rectangle:
                source: "../imagens/celular/fundoOpcao.png"
                size: self.size
                pos: self.pos

        LabelButton:
            canvas.before:
                Rectangle:
                    source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                    size: self.size
                    pos: self.pos
            on_release: app.Venda("Adicionar_Produto")
            id: adicionarBt
            text: "Adicionar"
            pos_hint: {"right":0.75, "top":0.19}
            size_hint: 0.5, 0.10

        LabelButton:
            canvas.before:
                Rectangle:
                    source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                    size: self.size
                    pos: self.pos
            on_release: app.mudar_tela("visualizarvenda")
            text: "Voltar"
            pos_hint: {"right":0.75, "top":0.1}
            size_hint: 0.5, 0.10

        GridLayout:
            rows: 1
            pos_hint: {"right":0.93 , "top":0.25}
            size_hint: 0.8, 0.05

            Label:
                text: "Quantidade Total:     "
                id: label_quantidade

            Label:
                id: quantidade
                text: "1"

            LabelButton:
                canvas.before:
                    Rectangle:
                        source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                        size: self.size
                        pos: self.pos
                on_release: app.Venda(1, Tela="Tela")
                text: "+"

            LabelButton:
                canvas.before:
                    Rectangle:
                        source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                        size: self.size
                        pos: self.pos
                on_release: app.Venda(-1, Tela="Tela")
                text: "-"

        ScrollView:
            pos_hint: {"right":0.95, "top":0.85}
            size_hint: 0.9, 0.595
            GridLayout:
                cols: 1
                id: lista_produtos
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True