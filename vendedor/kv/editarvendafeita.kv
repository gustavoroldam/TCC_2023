<EditarVendaFeita>:
    FloatLayout:
        canvas:
            Rectangle:
                source: "../imagens/celular/fundoOpcaoGrande01.png"
                size: self.size
                pos: self.pos

        GridLayout:
            cols: 1
            pos_hint: {"right":0.85, "top":0.70}
            size_hint: 0.7, 0.2
            Label:
                text:"Produto"
                id: id_Produto
                color: 0,0,0,1
            Label:
                text:"Quantidade"
                id: id_Quantidade
                color: 0,0,0,1
            Label:
                text:"Valor"
                id: id_Valor
                color: 0,0,0,1


        LabelButton:
            canvas.before:
                Rectangle:
                    source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                    size: self.size
                    pos: self.pos
            on_release: app.Venda("Salvar")
            text: "Salvar e Sair"
            id: salvar_sair
            pos_hint: {"right":0.75, "top":0.3}
            size_hint: 0.5, 0.10

        LabelButton:
            canvas.before:
                Rectangle:
                    source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                    size: self.size
                    pos: self.pos
            on_release: app.mudar_tela("visualizarvenda")
            text: "Sair sem Salvar"
            pos_hint: {"right":0.75, "top":0.2}
            size_hint: 0.5, 0.10

        LabelButton:
            canvas.before:
                Rectangle:
                    source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                    size: self.size
                    pos: self.pos
            on_release: app.Venda("Deletar")
            text: "Excluir da Lista"
            pos_hint: {"right":0.75, "top":0.1}
            size_hint: 0.5, 0.10

        GridLayout:
            rows: 1
            pos_hint: {"right":0.93 , "top":0.35}
            size_hint: 0.8, 0.05

            Label:
                text: "Quantidade Total:     "
                id: label_quantidade

            Label:
                id: quantidade
                text: "1"

            LabelButton:
                canvas.before:
                    Rectangle:
                        source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                        size: self.size
                        pos: self.pos
                on_release: app.Venda(1)
                text: "+"

            LabelButton:
                canvas.before:
                    Rectangle:
                        source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                        size: self.size
                        pos: self.pos
                on_release: app.Venda(-1)
                text: "-"