<HomePage>:
    FloatLayout:
        canvas:
            Rectangle:
                source: "../imagens/celular/fundoOpcaoGrande01.png"
                size: self.size
                pos: self.pos

        Label:
            pos_hint: {"right":0.85, "top":0.90}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"Vendedor Desconectado"
            id: id_nome_vendedor


        ImageButton:
            source: "../imagens/sairB.png"
            on_release: app.mudar_tela("login")
            pos_hint: {"right":0.35, "top":1}
            size_hint: 0.5, 0.10

        LabelButton:
            canvas.before:
                Rectangle:
                    source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                    size: self.size
                    pos: self.pos
            on_release: app.Produto("Adicionar")
            text: "Adicionar"
            pos_hint: {"right":0.75, "top":0.3}
            size_hint: 0.5, 0.10

        LabelButton:
            canvas.before:
                Rectangle:
                    source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                    size: self.size
                    pos: self.pos
            on_release: app.Carrinho("Carregar")
            text: "Finalizar Pedido"
            pos_hint: {"right":0.75, "top":0.2}
            size_hint: 0.5, 0.10

        LabelButton:
            canvas.before:
                Rectangle:
                    source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                    size: self.size
                    pos: self.pos
            on_release: app.Venda("Carregar")
            text: "Listar Vendas"
            pos_hint: {"right":0.75, "top":0.1}
            size_hint: 0.5, 0.10

        GridLayout:
            rows: 1
            pos_hint: {"right":0.93 , "top":0.35}
            size_hint: 0.8, 0.05

            Label:
                text: "Quantidade Total:     "
                id: label_quantidade

            Label:
                id: quantidade
                text: "1"

            LabelButton:
                canvas.before:
                    Rectangle:
                        source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                        size: self.size
                        pos: self.pos
                on_release: app.Produto(1)
                text: "+"

            LabelButton:
                canvas.before:
                    Rectangle:
                        source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                        size: self.size
                        pos: self.pos
                on_release: app.Produto(-1)
                text: "-"

        ScrollView:
            pos_hint: {"right":0.95, "top":0.75}
            size_hint: 0.9, 0.36
            GridLayout:
                cols: 1
                id: lista_produtos
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True