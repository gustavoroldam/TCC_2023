<ListarVendas>:
    FloatLayout:
        canvas:
            Rectangle:
                source: "../imagens/celular/fundoOpcao.png"
                size: self.size
                pos: self.pos
        Label:
            text: "Listar Vendas"
            pos_hint: {"right":1, "top":0.1}
            size_hint: 1, 0.5
        LabelButton:
            canvas.before:
                Rectangle:
                    source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                    size: self.size
                    pos: self.pos
            on_release: app.mudar_tela("homepage")
            text: "Voltar"
            pos_hint: {"right":0.75, "top":0.18}
            size_hint: 0.5, 0.15


        ScrollView:
            pos_hint: {"right":0.95, "top":0.75}
            size_hint: 0.9, 0.49
            GridLayout:
                cols: 1
                id: lista_vendas
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True