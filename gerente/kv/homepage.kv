<HomePage>:
    FloatLayout:
        canvas:
            Rectangle:
                source: "../imagens/desktop/fundo.png"
                size: self.size
                pos: self.pos

        Label:
            pos_hint: {"right":0.85, "top":0.83}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"Gerente Desconectado"
            id: id_nome_vendedor

        ImageButton:
            source: "../imagens/sairB.png"
            on_release: app.mudar_tela("login")
            pos_hint: {"right":0.35, "top":1}
            size_hint: 0.5, 0.10

        LabelButton:
            canvas.before:
                Rectangle:
