<EditarProduto>:
    FloatLayout:
        canvas:
            Rectangle:
                source: "../imagens/desktop/fundo.png"
                size: self.size
                pos: self.pos

        ImageButton:
            source: "../imagens/sairB.png"
            on_release: app.Opcoes("gprodutos")
            pos_hint: {"right":0.35, "top":1}
            size_hint: 0.5, 0.10

        LabelButton:
            canvas.before:
                Rectangle:
                    source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                    size: self.size
                    pos: self.pos
            on_release: app.Opcoes("edit_prod")
            text: "SALVAR"
            pos_hint: {"right":0.75, "top":0.15}
            size_hint: 0.5, 0.15

        Label:
            pos_hint: {"right":0.48, "top":0.73}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"NOME:"
        TextInput:
            id: nome_input
            hint_text: "nome"
            pos_hint: {"right": 0.9, "top": 0.6}
            size_hint: 0.8, 0.08
        Label:
            pos_hint: {"right":0.503, "top":0.58}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"QUANTIADE:"
        TextInput:
            id: qtde_input
            hint_text: "X"
            pos_hint: {"right": 0.9, "top": 0.45}
            size_hint: 0.8, 0.08
        Label:
            pos_hint: {"right":0.48, "top":0.43}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"VALOR:"
        TextInput:
            id: valor_input
            hint_text: "XX.XX"
            pos_hint: {"right": 0.9, "top": 0.3}
            size_hint: 0.8, 0.08