<ListarFuncionarios>:
    FloatLayout:
        canvas:
            Rectangle:
                source: "../imagens/desktop/fundo.png"
                size: self.size
                pos: self.pos

        ImageButton:
            source: "../imagens/sairB.png"
            on_release: app.mudar_tela("homepage")
            pos_hint: {"right":0.35, "top":1}
            size_hint: 0.5, 0.10

        Label:
            pos_hint: {"right":1.22, "top":1.04}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"ADICIONAR FUNCION√ÅRIO"

        LabelButton:
            canvas.before:
                Rectangle:
                    source: "../imagens/botaoCirculo.png" if self.state == "normal" else "../imagens/botaoCirculoPrecionado.png"
                    size: self.size
                    pos: self.pos
            id: filtro
            on_release: app.Opcoes("add_func")
            text: "+"
            font_size: '30sp'
            pos_hint: {"right":0.95, "top":0.95}
            size_hint: 0.16, 0.18

        Label:
            pos_hint: {"right":0.5, "top":0.83}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"NOME"

        Label:
            pos_hint: {"right":0.67, "top":0.83}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"LOGIN"

        Label:
            pos_hint: {"right":0.85, "top":0.83}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"SENHA"

        Label:
            pos_hint: {"right":1.03, "top":0.83}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"CPF"

        Label:
            pos_hint: {"right":1.21, "top":0.83}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"CARGO"

        ScrollView:
            pos_hint: {"right":0.95, "top":0.7}
            size_hint: 0.9, 0.7
            GridLayout:
                cols: 5
                id: lista_funcionario
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True