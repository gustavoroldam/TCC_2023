<EditarFuncionario>:
    FloatLayout:
        canvas:
            Rectangle:
                source: "../imagens/desktop/fundo.png"
                size: self.size
                pos: self.pos

        ImageButton:
            source: "../imagens/sairB.png"
            on_release: app.Opcoes("gfuncionarios")
            pos_hint: {"right":0.35, "top":1}
            size_hint: 0.5, 0.10

        ImageButton:
            source: "../imagens/lixeira.png"
            on_release: app.Opcoes("del_func")
            pos_hint: {"right":1.08, "top":0.9}
            size_hint: 0.5, 0.10

        LabelButton:
            canvas.before:
                Rectangle:
                    source: "../imagens/botao.png" if self.state == "normal" else "../imagens/botaoPrecionado.png"
                    size: self.size
                    pos: self.pos
            on_release: app.Opcoes("edit_func")
            text: "SALVAR"
            pos_hint: {"right":0.75, "top":0.15}
            size_hint: 0.5, 0.15

        Label:
            pos_hint: {"right":0.53, "top":0.73}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"NOME COMPLETO:"
        Label:
            color: 0,0,0,1
            text: "NOME"
            id: nome_completo
            pos_hint: {"right": 0.58, "top": 0.6}
            size_hint: 0.8, 0.08
        Label:
            pos_hint: {"right":0.48, "top":0.6}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"LOGIN:"
        TextInput:
            id: login_input
            hint_text: "login"
            pos_hint: {"right": 0.9, "top": 0.475}
            size_hint: 0.8, 0.08
        Label:
            pos_hint: {"right":0.485, "top":0.47}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"SENHA:"
        TextInput:
            id: senha_input
            hint_text: "senha"
            password: True
            pos_hint: {"right": 0.9, "top": 0.35}
            size_hint: 0.8, 0.08
        Label:
            pos_hint: {"right":0.47, "top":0.34}
            size_hint: 0.7, 0.2
            color: 0,0,0,1
            text:"CPF:"
        Label:
            color: 0,0,0,1
            id: cpf
            text: "cpf"
            pos_hint: {"right": 0.56, "top": 0.225}
            size_hint: 0.8, 0.08